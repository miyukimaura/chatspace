.wrapper
  = render 'shared/side_bar'
  .chat
    .header
      .left-header
        .left-header__title{data: {"group-id": "#{@group.id}"}}
          = @group.name
        %ul.left-header__members
          Memberï¼š
          - @group.users.each do |user|
            %li.member
              = user.name
      .right-header
        .right-header__button
          = link_to "edit", edit_group_path(@group)
    .messages
      = render @messages
    .form
      = form_for [@group, @message] do |f|
        .form__message
          = f.text_field :content, class: 'form__message-box', placeholder: 'type a message'
          = f.label :image, class: 'image-label' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
          = f.submit 'Send', class: 'form__message__submit'